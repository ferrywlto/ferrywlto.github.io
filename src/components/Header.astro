---
import HeaderLink from './HeaderLink.astro';
import Hamburger from './Hamburger.astro';
import DrawerMenu from './DrawerMenu.astro';
---

<header x-data="{ 
	open: false
}">
	<nav>
		<Hamburger />
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
	</nav>
	<DrawerMenu />
</header>
<style>
	header {		
		box-sizing: border-box;
		padding: 0 var(--space-lg);
		background: rgba(255, 255, 255, 0.15);
		backdrop-filter: blur(15px) saturate(160%);
		-webkit-backdrop-filter: blur(15px) saturate(160%);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: var(--shadow-md);
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		height: var(--header-height);
		max-height: var(--header-height);
		overflow: hidden
		/* Make header a flex container to center nav */
		display: flex;
		align-items: center;
	}

	header::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: var(--texture-pattern);
		background-repeat: repeat;
		background-position: left top;
		opacity: 0.18;
		z-index: -1;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
		width: 100%; /* Take full width within header */
	}

	.nav-links {
		display: flex;
		gap: var(--space-md);
		align-items: center;
	}

	.nav-links :global(a) {
		padding: var(--space-md);
		color: rgb(var(--gray-dark));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: var(--transition-slow);
		font-weight: 500;
		font-size: var(--text-lg);
		position: relative;
		background: transparent;
		/* Ensure proper vertical alignment */
		display: inline-flex;
		align-items: center;
		/* Prevent text shifting on font-weight change */
		min-width: fit-content;
	}

	.nav-links :global(a:hover) {
		color: var(--accent);
		border-bottom-color: transparent;
		font-weight: 500;
		background: linear-gradient(
			to top,
			rgba(var(--accent-rgb), 0.15) 0%,
			rgba(var(--accent-rgb), 0.08) 30%,
			rgba(var(--accent-rgb), 0.04) 60%,
			transparent 100%
		);
	}

	.nav-links :global(a.active) {
		color: var(--accent-dark);
		border-bottom-color: transparent;
		font-weight: 700;
	}

	/* Mobile-first: Hide nav-links on small screens */
	@media (max-width: 719px) {
		header {
			box-sizing: border-box;
			height: var(--header-height);
			max-height: var(--header-height);
			overflow: hidden;
			padding: 0 var(--space-sm);
		}
		
		.nav-links {
			display: none;
		}
		
		/* Legacy mobile nav-links fallback styles for any remaining usage */
		:global(.nav-links) {
			width: 100%;
			top: 5rem;
			display: none;
			margin: 0;
			z-index: 1;
		}

		:global(.nav-links a) {
			display: block;
			text-align: center;
			padding: var(--space-sm) 0;
			text-decoration: none;
			font-size: var(--text-xl);
			font-weight: bold;
			text-transform: uppercase;
		}

		:global(.expanded) {
			display: unset;
		}
	}

	/* Desktop: Show nav-links, hide hamburger */
	@media (min-width: 720px) {
		header {
			box-sizing: border-box;
			height: var(--header-height);
			max-height: var(--header-height);
			overflow: hidden;
		}
		
		.nav-links {
			display: flex;
		}
		
		/* Legacy desktop nav-links fallback styles */
		:global(.nav-links) {
			margin-left: var(--space-3xl);
			display: block;
			position: static;
			width: auto;
			background: none;
		}

		:global(.nav-links a) {
			display: inline-block;
			padding: var(--space-md) var(--space-xl);
		}
	}
</style>
