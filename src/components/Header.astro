---
import HeaderLink from './HeaderLink.astro';
import Hamburger from './Hamburger.astro';
import DrawerMenu from './DrawerMenu.astro';
---

<header class="texture-overlay" x-data="{ 
	open: false
}">
	<nav>
		<Hamburger />
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
	</nav>
	<DrawerMenu />
</header>
<style>
	header {		
		box-sizing: border-box;
		padding: 0 var(--space-lg);
		background: var(--white);
		border-bottom: 1px solid var(--black-opacity-10);
		box-shadow: var(--shadow-sm);
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		height: var(--header-height);
		max-height: var(--header-height);
		overflow: hidden;
		/* Make header a flex container to center nav */
		display: flex;
		align-items: center;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
		width: 100%; /* Take full width within header */
	}

	.nav-links {
		display: flex;
		gap: var(--space-md);
		align-items: center;
	}


	/* Mobile-first: Hide nav-links on small screens */
	@media (max-width: 719px) {
		header {
			box-sizing: border-box;
			height: var(--header-height);
			max-height: var(--header-height);
			overflow: hidden;
			padding: 0 var(--space-sm);
		}
		
		.nav-links {
			display: none;
		}
	}

	/* Desktop: Show nav-links, hide hamburger */
	@media (min-width: 720px) {
		header {
			box-sizing: border-box;
			height: var(--header-height);
			max-height: var(--header-height);
			overflow: hidden;
		}
		
		.nav-links {
			display: flex;
		}
	}
</style>
