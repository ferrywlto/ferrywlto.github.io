---
import HeaderLink from './HeaderLink.astro';
import Hamburger from './Hamburger.astro';
import DrawerMenu from './DrawerMenu.astro';
---

<header class="texture-overlay flex-center" x-data="{ 
	open: false
}">
	<nav class="flex-center">
		<Hamburger />
		<div class="nav-links flex-between">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/blog" class="hidden">Whispers</HeaderLink>
			<HeaderLink href="/blog" class="hidden">Projects</HeaderLink>
		</div>
	</nav>
	<DrawerMenu />
</header>
<style>
	header {		
		box-sizing: border-box;
		background: var(--white);
		border-bottom: 1px solid var(--black-opacity-10);
		box-shadow: var(--shadow-sm);
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		height: var(--header-height);
		max-height: var(--header-height);
		overflow: hidden;
	}

	nav {
		position: relative;
		z-index: 1;
		width: 100%;
		margin: 0 auto;
	}

	.nav-links {
		padding: 0 var(--space-lg);
		width: 100%;
		max-width: 720px;
	}

	/* Mobile-first: Hide nav-links on small screens */
	@media (max-width: 719px) {
		header {
			box-sizing: border-box;
			height: var(--header-height);
			max-height: var(--header-height);
			overflow: hidden;
			padding: 0 var(--space-sm);
		}
		
		nav {
			justify-content: start;
		}

		.nav-links {
			display: none;
		}
	}
</style>
