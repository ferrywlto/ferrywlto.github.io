---
const today = new Date();
---
<footer>
  <div class="footer-content">
    <span class="line-break">
    &copy; {today.getFullYear()} Ferry To & <a href="https://verdantsparks.io" target="_blank">VerdantSparks</a> &trade;
    </span>
    <span class="line-break">All rights reserved.</span>
    <span class="line-break powered-by">       
      Powered by
      <a href="https://astro.build" target="_blank">Astro</a> &
      <a href="https://alpinejs.dev" target="_blank">Alpine.Js</a>
    </span>
  </div>
</footer>
<style>
	footer {
		box-sizing: border-box;
		height: var(--footer-height);
		max-height: var(--footer-height);
		overflow: hidden;
		padding: var(--space-lg) var(--space-md);
		color: rgb(var(--gray));
		text-align: center;
		position: relative;
		background: linear-gradient(135deg, rgb(var(--white)) 0%, rgb(var(--gray-lighter)) 100%);
		box-shadow: var(--shadow-lg);
		border-top: 1px solid rgba(var(--black), 0.05);
		backdrop-filter: blur(10px);
		transition: var(--transition-slow);
		/* Ensure footer styling is independent */
		font-family: inherit;
		font-size: inherit;
		line-height: 1.4;
		display: flex;
		align-items: center;
		justify-content: center;
	}  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(var(--mint-bg));
    background-image: var(--texture-pattern);
    background-repeat: repeat;
    background-position: left top;
    opacity: 0.18;
    z-index: -1;
  }

	.footer-content {
		position: relative;
		z-index: 1;
		max-width: var(--container-lg);
		margin: 0 auto;
	}

	footer a {
		text-decoration: none;
		color: var(--accent-dark);
		transition: var(--transition-normal);
		font-weight: 500;
	}

	footer a:hover {
		color: var(--accent);
		text-decoration: underline;
	}

	footer a:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
		border-radius: var(--radius-sm);
	}

	.line-break {
		display: inline;
	}

	/* Responsive footer layout */
	@media (min-width: 431px) and (max-width: 819px) {
		.line-break.powered-by {
			display: block;
			margin-top: var(--space-xs);
		}
	}

	@media (max-width: 720px) {
		footer {
			box-sizing: border-box;
			height: var(--footer-height);
			max-height: var(--footer-height);
			overflow: hidden;
		}
		
		.line-break {
			display: block;
			margin-top: var(--space-xs);
		}
		
		.line-break:first-child {
			margin-top: 0;
		}
	}

	@media (max-width: 430px) {
		footer {
			box-sizing: border-box;
			height: var(--footer-height);
			max-height: var(--footer-height);
			overflow: hidden;
			padding: var(--space-md) var(--space-md);
			font-size: var(--text-sm);
		}

		.line-break {
			margin-top: var(--space-sm);
		}
	}
</style>
