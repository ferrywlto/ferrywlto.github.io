---
const today = new Date();
---
<footer>
  <div class="footer-content">
    <span class="line-break">
    &copy; {today.getFullYear()} Ferry To & <a href="https://verdantsparks.io" target="_blank">VerdantSparks</a>&trade;
    </span>
    <span class="line-break">All rights reserved.</span>
    <span class="line-break powered-by">       
      Powered by
      <a href="https://astro.build" target="_blank">Astro</a> &
      <a href="https://alpinejs.dev" target="_blank">Alpine.Js</a>
    </span>
  </div>
</footer>
<style>
	footer {
		box-sizing: border-box;
		height: var(--footer-height);
		max-height: var(--footer-height);
		overflow: hidden;
		padding: var(--space-md);
		color: rgb(var(--gray));
		text-align: center;
		position: relative;
		background: transparent;
		box-shadow: var(--shadow-sm);
		border-top: 1px solid rgba(var(--black), 0.05);
		transition: var(--transition-slow);
		/* Ensure footer styling is independent */
		font-family: inherit;
		font-size: var(--text-md);
		line-height: 1.4;
		display: flex;
		align-items: center;
		justify-content: center;
    min-width: 280px;
	}

	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgb(var(--gray-lighter));
		background-image: var(--texture-pattern);
		background-repeat: repeat;
		background-position: left top;
		opacity: 0.18;
		z-index: -1;
	}

	.footer-content {
		position: relative;
		z-index: 2;
		max-width: var(--container-lg);
		margin: 0 auto;
	}

	footer a {
		text-decoration: none;
		color: var(--accent-dark);
		transition: var(--transition-normal);
		font-weight: 500;
	}

	footer a:hover {
		color: var(--accent);
		text-decoration: underline;
	}

	footer a:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
		border-radius: var(--radius-sm);
	}

	.line-break {
		display: inline;
	}

	/* Responsive footer layout */
	@media (min-width: 471px) and (max-width: 1023px) {
		.line-break.powered-by {
			display: block;
      margin-top: var(--space-sm);
		}
    footer {
      font-size: var(--text-sm);
    }
	}

	/* @media (max-width: 719px) {
		footer {
			box-sizing: border-box;
			height: var(--footer-height);
			max-height: var(--footer-height);
			overflow: hidden;
      font-size: var(--text-xs);
		}		
	} */
  
	@media (max-width: 470px) {
    .line-break {
      display: block;
      margin-top: var(--space-xs);
    }
    
    .line-break:first-child {
      margin-top: 0;
    }
		footer {
			box-sizing: border-box;
			height: var(--footer-height);
			max-height: var(--footer-height);
			overflow: hidden;
      font-size: var(--text-xs);
		}
	}
</style>
