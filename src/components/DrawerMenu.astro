---
import HeaderLink from "./HeaderLink.astro";
import CloseButton from "./CloseButton.astro";
---

<div
  class="drawer-overlay hide-on-desktop"
  x-show="open"
  x-transition.opacity.duration.300ms
  x-on:click="open = false"
  x-effect="console.log('Drawer overlay - open state:', open)"
>
</div>
<div
  class="drawer"
  x-show="open"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="transform -translate-x-full"
  x-transition:enter-end="transform translate-x-0"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="transform translate-x-0"
  x-transition:leave-end="transform -translate-x-full"
  x-effect="console.log('Drawer menu - open state:', open)"
>
  <div class="drawer-header">
    <h2>Menu</h2>
    <CloseButton onClick="open = false" ariaLabel="Close menu" />
  </div>
  <nav class="drawer-nav">
    <HeaderLink href="/blog">üìù Blog</HeaderLink>
    <HeaderLink href="/blog">üìì Diary</HeaderLink>
    <HeaderLink href="/whispers">üí¨ Quotes</HeaderLink>
    <HeaderLink href="/projects">üöÄ Projects</HeaderLink>
    <HeaderLink href="/about">üë®üèª‚Äçüíª About</HeaderLink>
  </nav>
</div>

<style>

  .drawer-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: color-mix(in srgb, var(--color-body) 10%, transparent);
    backdrop-filter: blur(8px) brightness(0.8);
    -webkit-backdrop-filter: blur(8px) brightness(0.8);
    z-index: 998;
  }

  .drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--drawer-width);
    max-width: 70vw;
    height: 100vh;
    background: var(--color-surface);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    z-index: 999;
    box-shadow:
      4px 0 25px color-mix(in srgb, var(--color-body) 10%, transparent),
      0 0 0 1px color-mix(in srgb, var(--color-light) 20%, transparent);
    display: flex;
    flex-direction: column;
    z-index: 999;
  }

  .drawer-header {
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    position: relative;
    box-shadow: var(--shadow-drawer);
    box-sizing: border-box;
    height: var(--header-height);
    min-height: var(--header-height);
    max-height: var(--header-height);
    overflow: hidden;
  }

  .drawer-header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-light) 10%, transparent) 0%,
      color-mix(in srgb, var(--color-light) 5%, transparent) 100%
    );
    z-index: -1;
    max-height: var(--header-height);
  }

  .drawer-header h2 {
    margin: 0;
    color: var(--color-primary);
  }

  .drawer-nav {
    flex: 1;
    padding: 0;
    margin: 0;
    overflow-y: auto;
    width: 100%;
    border: none;
    outline: none;
    /* Reset any inherited nav styles */
    position: relative;
    left: 0;
    top: 0;
    background: none;
    list-style: none;
  }

  .drawer-nav :global(a) {
    display: block;
    padding: var(--space-md) var(--space-lg);
    margin: 0;
    text-decoration: none;
    color: var(--color-text-secondary);
    font-size: 1.25rem;
    font-weight: 500;
    border-left: none;
    transition: var(--transition-slow);
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
  }

  /* Override for hidden class */
  .drawer-nav :global(a.hidden) {
    display: none;
  }

  .drawer-nav :global(a.active) {
    background-color: var(--color-primary);
    color: var(--color-light);
    border-left: none;
    font-weight: 700;
    backdrop-filter: blur(8px) saturate(150%);
    -webkit-backdrop-filter: blur(8px) saturate(150%);
    box-shadow:
      inset 0 0 20px color-mix(in srgb, var(--color-body) 10%, transparent),
      0 4px 15px color-mix(in srgb, var(--color-primary) 40%, transparent),
      0 0 0 1px color-mix(in srgb, var(--color-light) 20%, transparent);
    text-shadow: 0 1px 2px
      color-mix(in srgb, var(--color-body) 10%, transparent);
  }
</style>
