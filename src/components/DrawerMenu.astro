---
import HeaderLink from "./HeaderLink.astro";
---

<div
  class="drawer-overlay"
  x-show="open"
  x-transition.opacity.duration.300ms
  x-on:click="open = false"
>
</div>
<div
  class="drawer"
  x-show="open"
  x-transition:enter="drawer-enter"
  x-transition:enter-start="drawer-enter-start"
  x-transition:enter-end="drawer-enter-end"
  x-transition:leave="drawer-leave"
  x-transition:leave-start="drawer-leave-start"
  x-transition:leave-end="drawer-leave-end"
>
  <div class="drawer-header texture-overlay flex-between">
    <h2>Menu</h2>
    <button
      class="close-btn btn-reset btn-interactive"
      x-on:click="open = false"
      aria-label="Close menu"
    >
      <svg
        width="38"
        height="38"
        viewBox="0 0 38 38"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M28 10L10 28M10 10L28 28"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </button>
  </div>
  <nav class="drawer-nav">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="/whispers">Whispers</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/tags">Tags</HeaderLink>
    <HeaderLink href="/projects" class="hidden">Projects</HeaderLink>
  </nav>
</div>

<style>
  /* Alpine.js transition classes */
  .drawer-enter {
    transition: transform 0.3s ease-out;
  }
  .drawer-enter-start {
    transform: translateX(-100%);
  }
  .drawer-enter-end {
    transform: translateX(0);
  }
  .drawer-leave {
    transition: transform 0.3s ease-in;
  }
  .drawer-leave-start {
    transform: translateX(0);
  }
  .drawer-leave-end {
    transform: translateX(-100%);
  }

  .drawer-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: color-mix(in srgb, var(--color-body) 10%, transparent);
    backdrop-filter: blur(8px) brightness(0.8);
    -webkit-backdrop-filter: blur(8px) brightness(0.8);
    z-index: 998;
  }

  .drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--drawer-width);
    max-width: 70vw;
    height: 100vh;
    background: var(--color-surface);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    z-index: 999;
    box-shadow:
      4px 0 25px color-mix(in srgb, var(--color-body) 10%, transparent),
      0 0 0 1px color-mix(in srgb, var(--color-light) 20%, transparent);
    display: flex;
    flex-direction: column;
    z-index: 999;
  }

  .drawer-header {
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    position: relative;
    box-shadow: var(--shadow-drawer);
    box-sizing: border-box;
    height: var(--header-height);
    min-height: var(--header-height);
    max-height: var(--header-height);
    overflow: hidden;
  }

  .drawer-header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-light) 10%, transparent) 0%,
      color-mix(in srgb, var(--color-light) 5%, transparent) 100%
    );
    z-index: -1;
    max-height: var(--header-height);
  }

  .drawer-header h2 {
    margin: 0;
    color: var(--color-primary);
  }

  .close-btn {
    color: var(--color-primary);
    transition: var(--transition-slow);
    position: relative;
    overflow: hidden;
  }

  .drawer-nav {
    flex: 1;
    padding: 0;
    margin: 0;
    overflow-y: auto;
    width: 100%;
    border: none;
    outline: none;
    /* Reset any inherited nav styles */
    position: relative;
    left: 0;
    top: 0;
    background: none;
    list-style: none;
  }

  .drawer-nav :global(a) {
    display: block;
    padding: var(--space-md) var(--space-lg);
    margin: 0;
    text-decoration: none;
    color: var(--color-text-secondary);
    font-size: 1.25rem;
    font-weight: 500;
    border-left: none;
    transition: var(--transition-slow);
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
  }

  /* Override for hidden class */
  .drawer-nav :global(a.hidden) {
    display: none;
  }

  .drawer-nav :global(a.active) {
    background-color: var(--color-primary);
    color: var(--color-light);
    border-left: none;
    font-weight: 700;
    backdrop-filter: blur(8px) saturate(150%);
    -webkit-backdrop-filter: blur(8px) saturate(150%);
    box-shadow:
      inset 0 0 20px color-mix(in srgb, var(--color-body) 10%, transparent),
      0 4px 15px color-mix(in srgb, var(--color-primary) 40%, transparent),
      0 0 0 1px color-mix(in srgb, var(--color-light) 20%, transparent);
    text-shadow: 0 1px 2px
      color-mix(in srgb, var(--color-body) 10%, transparent);
  }
  /* Hide drawer on desktop */
  @media (min-width: 720px) {
    .drawer,
    .drawer-overlay {
      display: none !important;
    }
  }
</style>
