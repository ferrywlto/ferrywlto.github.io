---
import ColumnContainer from './ColumnContainer.astro';
import TagRow from './TagRow.astro';

export interface Props {
  name: string;
  description: string;
  link: string;
  lastUpdated?: string;
  tags: string[];
}
const { name, description, link, tags } = Astro.props;
---

<div class="thread-glow-card surface-background-hover">
  <ColumnContainer gap="sm">
    <div class="header-row">
      <div class="title-container">
        <a href={link}>
          <h3 class="text-item-title">{name}</h3>
        </a>
      </div>
      <TagRow tags={tags} />
    </div>
    <h4 class="text-item-subtitle">{description}</h4>
  </ColumnContainer>
</div>

<style>
  @import "../styles/components.css";
  @import "../styles/typography.css";
  @import "../styles/effect.css";

  .header-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .title-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
</style>
