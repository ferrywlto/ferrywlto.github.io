---
export interface Props {
  name: string;
  description: string;
  link: string;
  lastUpdated?: string;
  tags: string[];
}
const { name, description, link, tags } = Astro.props;
---

<div class="thread-glow-card column-container project-list-item surface-background-hover">
  <div class="header-row">
    <div class="title-container">
      <a href={link}>
        <h3 class="text-item-title">{name}</h3>
      </a>
    </div>
    <div class="tags-container">
      {
        tags.map((tag) => (
          <div class="hollow-tag-badge">
            <span class="text-badge">{tag}</span>
          </div>
        ))
      }
    </div>
  </div>
  <h4 class="text-item-subtitle">{description}</h4>
</div>

<style>
  @import "../styles/components.css";
  @import "../styles/typography.css";
  @import "../styles/spacing.css";
  @import "../styles/effect.css";

  .project-list-item {
    gap: var(--gap-sm);
  }

  .header-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .title-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .tags-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--gap-sm);
  }
</style>
