---
import { Image } from "astro:assets";

const { url, alt, src } = Astro.props;
---
<style>
	.container {
		/* aspect-ratio: 16:9; */
		width: 100%;
		max-width: 150px;
		max-height: 68px;
		align-content: center;
		justify-content: center;
		
		padding: var(--space-sm);
	}

	.container img:hover {
		filter: drop-shadow(var(--shadow-hero));
	}

	.container:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	.container img {
		width: 100%;
		object-fit: contain;
		transition: filter 0.18s linear;
	}
</style>
<div class="container">
    <a href={url} target="_blank">
        <Image alt={alt} src={src} />
    </a>
</div>