---
import ColumnContainer from './ColumnContainer.astro';
import ProjectListItem from './ProjectListItem.astro';

export interface Project {
  name: string;
  description: string;
  link: string;
  lastUpdated?: string;
  tags: string[];
}

export interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<ColumnContainer gap="md">
  {
    projects.map(({ name, description, link, tags }) => (
      <ProjectListItem name={name} description={description} link={link} tags={tags} />
    ))
  }
</ColumnContainer>
