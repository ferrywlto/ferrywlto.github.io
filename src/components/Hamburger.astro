<button class="hamburger" x-on:click="open = !open" aria-label="Toggle menu">
    <span class="line pad"></span>
    <span class="line"></span>
    <span class="line pad"></span>
</button>

<style>
	.hamburger {
		cursor: pointer;
		z-index: 1000;
		padding: 0.5rem;
		background: none;
		border: none;
		border-radius: 8px;
		transition: all 0.3s ease;
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		min-width: 68px;
		min-height: 68px;
		/* Ensure perfect vertical alignment */
		align-self: center;
		margin: auto 0;
	}

	.hamburger:hover {
		background-color: rgba(var(--accent), 0.1);
		transform: scale(1.05);
	}

	.hamburger:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	.hamburger .line {
		display: block;
		width: 38px;
		height: 3.8px;
		background-color: var(--accent-dark);
		border-radius: 3px;
	}

	.hamburger .pad {
		margin-top: 8px; 
		margin-bottom: 8px;
	}

	/* Hide hamburger on desktop - mobile navigation only */
	@media (min-width: 720px) {
		.hamburger {
			display: none !important;
		}
	}

	/* Show hamburger on mobile */
	@media (max-width: 719px) {
		.hamburger {
			display: flex;
		}
	}
</style>