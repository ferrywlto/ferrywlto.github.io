---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<section>
  <details>
    <summary class="text-section-title">
      <h2>{title}</h2>
    </summary>
    <div class="column-container gap-lg">
      <hr />
      <slot />
    </div>
  </details>
</section>

<style>
summary {
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: var(--gap-sm);
}

summary h2 {
  margin: 0;
  display: inline;
}

/* Ensure consistent marker positioning across browsers */
summary::marker {
  content: "";
}

summary::before {
  content: "â–¶";
  display: inline-block;
  transition: transform 0.3s ease;
}

details[open] summary::before {
  transform: rotate(90deg);
}

.gap-lg {
  gap: var(--gap-lg);
}
</style>
