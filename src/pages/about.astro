  { name: "GitHub", url: "https://github.com/ferrywlto" },
  { name: "Threads", url: "https://www.threads.com/@ferrywlto" },
  { name: "Medium", url: "https://medium.com/@ferrywlto" },
  { name: "LeetCode", url: "https://leetcode.com/u/ferrywlto/" },
  { name: "StackOverflow", url: "https://stackoverflow.com/users/2952180/ferry-to" },
];

const cats = [
  {
    name: "Sheldon",
    description: "A Scottish Fold × British Short-hair who joined us when Elaine and I first met. Polite, not a picky eater, and very people-friendly — our resident receptionist.",
    photo: SheldonPhoto,
    alt: "Image of my cat Sheldon",
  },
  {
    name: "Shamy",
    description: "A ginger-and-white domestic adopted a year after we married. Named after Sheldon and Amy from the Big Bang Theory; shy and quietly affectionate.",
    photo: ShamyPhoto,
    alt: "Image of my cat Shamy",
  },
  {
    name: "Seven",
    description: "A tabby-and-white we rescued in Taiwan as a month-old kitten. Playful chaos engine, perpetually peckish, and the biggest of the three.",
