    value: [
      { key: "Laptop", value: "MacBook Pro 16 Nov 2023: (M3 Pro, 36 GB RAM)" },
      { key: "Monitor", value: 'BenQ RD280U 4K 28"' },
      { key: "Keyboard", value: "Ultimate Hacking Keyboard v1" },
