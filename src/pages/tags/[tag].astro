---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');

  const tags = [
    ...new Set(allPosts.map((post: any) => post.data.tags).flat()),
  ];

  return tags.map((tag) => {
    const filteredPosts = allPosts.filter((post: any) =>
      post.data.tags.includes(tag)
    ).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Posts tagged "${tag}" | ${SITE_TITLE}`} description={`All posts tagged with ${tag}`} />
		<style>
			main {
				width: var(--container-xs);
				max-width: var(--max-width);
			}
			
			.page-header {
			}
			
			h1 {
				color: var(--black);
				font-size: var(--text-4xl);
				line-height: 1.2;
			}
			
			.tag-info {
				color: var(--gray);
				font-size: var(--text-lg);
			}
			
			.back-link {
				color: var(--accent);
				text-decoration: none;
				font-weight: 500;
				transition: var(--transition-normal);
			}
			
			.back-link:hover {
				color: var(--accent-dark);
			}
			
			.posts-list {
			}
			
			.post-item {
				background: var(--gray-light-opacity-30);
				margin-bottom: var(--space-md);
			}
			
			.post-item:hover {
				box-shadow: var(--shadow-lg);
			}
			
			.post-link {
				color: inherit;
			}
			
			.post-title {
				color: var(--black);
				font-size: var(--text-xl);
				font-weight: 700;
				line-height: 1.3;
			}
			
			.post-date {
				color: var(--gray);
				font-size: var(--text-sm);
			}
			
			.post-link:hover .post-title {
				color: var(--accent);
			}
			
			.empty-state {
				color: var(--gray);
				font-style: italic;
			}
			
			@media (max-width: 719px) {
				main {
				}
				
				h1 {
					font-size: var(--text-3xl);
				}
				
				.page-header {
				}
				
				.post-link {
				}
				
				.post-title {
					font-size: var(--text-lg);
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="margin-auto responsive-padding">
			<section>
				<a href="/tags" class="back-link inline-block margin-bottom-lg">‚Üê All Tags</a>
				
				<div class="page-header text-center margin-y-xl">
					<h1 class="margin-bottom-md">#{tag}</h1>
					<p class="tag-info">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</p>
				</div>
				
				{posts.length > 0 ? (
					<ul class="posts-list list-reset margin-y-xl">
						{posts.map((post: any) => (
							<li class="post-item card">
								<a href={`/blog/${post.id}/`} class="post-link block text-decoration-none padding-lg">
									<h3 class="post-title margin-bottom-md">{post.data.title}</h3>
									<p class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))}
					</ul>
				) : (
					<p class="empty-state text-center margin-y-xl">{posts.length} posts found with this tag.</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
