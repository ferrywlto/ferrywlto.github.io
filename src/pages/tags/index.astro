---
import { getCollection } from "astro:content";

const allPosts = await getCollection('blog');
const tags = [
  ...new Set(allPosts.map((post: any) => post.data.tags).flat()),
];
const pageTitle = "Tag Index";
---
<h1>{pageTitle}</h1>
<div>
  <ul>
    {tags.map((tag) => <li><a href={`/tags/${tag}`}>{tag}</a></li>)}</div>
  </ul>
